<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.coursemgr.mapper.CategoryMapper">

    <resultMap id="CategoryResultMap" type="com.neusoft.coursemgr.domain.Category">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="sortOrder" column="sort_order" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, sort_order, status, create_time, update_time
    </sql>

    <select id="selectById" parameterType="long" resultMap="CategoryResultMap">
        SELECT <include refid="Base_Column_List"/> FROM category_table WHERE id = #{id}
    </select>

    <select id="selectByName" parameterType="string" resultMap="CategoryResultMap">
        SELECT <include refid="Base_Column_List"/> FROM category_table WHERE name = #{name}
    </select>

    <select id="selectEnabled" resultMap="CategoryResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category_table
        WHERE status = 1
        ORDER BY sort_order ASC, id ASC
    </select>

    <select id="selectAll" resultMap="CategoryResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM category_table
        ORDER BY sort_order ASC, id ASC
    </select>

    <insert id="insert" parameterType="com.neusoft.coursemgr.domain.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category_table (name, sort_order, status)
        VALUES (#{name}, #{sortOrder}, #{status})
    </insert>

    <update id="update" parameterType="com.neusoft.coursemgr.domain.Category">
        UPDATE category_table
        SET name = #{name},
            sort_order = #{sortOrder},
            status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM category_table WHERE id = #{id}
    </delete>

</mapper>
