<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.coursemgr.mapper.BannerMapper">

    <resultMap id="BannerResultMap" type="com.neusoft.coursemgr.domain.Banner">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="imageUrl" column="image_url" />
        <result property="linkUrl" column="link_url" />
        <result property="sortOrder" column="sort_order" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id, title, image_url, link_url, sort_order, status, create_time, update_time
    </sql>

    <select id="selectById" parameterType="long" resultMap="BannerResultMap">
        SELECT <include refid="Base_Column_List"/> FROM banner_table WHERE id = #{id}
    </select>

    <select id="selectEnabled" resultMap="BannerResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM banner_table
        WHERE status = 1
        ORDER BY sort_order ASC, id ASC
    </select>

    <select id="selectAll" resultMap="BannerResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM banner_table
        ORDER BY sort_order ASC, id ASC
    </select>

    <insert id="insert" parameterType="com.neusoft.coursemgr.domain.Banner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO banner_table (title, image_url, link_url, sort_order, status)
        VALUES (#{title}, #{imageUrl}, #{linkUrl}, #{sortOrder}, #{status})
    </insert>

    <update id="update" parameterType="com.neusoft.coursemgr.domain.Banner">
        UPDATE banner_table
        SET title = #{title},
            image_url = #{imageUrl},
            link_url = #{linkUrl},
            sort_order = #{sortOrder},
            status = #{status}
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE banner_table SET status = #{status} WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM banner_table WHERE id = #{id}
    </delete>

</mapper>
